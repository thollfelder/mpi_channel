{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "gcc build active file",
            "command": "/usr/bin/gcc",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "-Wall",
                "-Wextra",
                "-lpthread",
                "-lm"
                /*
                "-lSDL"*/
                /*"-lzmq",
                "-lczmq"*/
            ],
            "options": {
                "cwd": "/usr/bin"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        },
        {
            "type": "shell",
            "label": "mpicc build active file",
            "command": "/usr/bin/mpicc",
            "args": [
                "-g",
                //"${file}",
                "${fileDirname}/**.c",
                //"${fileDirname}\\**.c",
                // mpicc MPI_Channel.c test.c -o Program

                // echo 0 | sudo tee /proc/sys/kernel/yama/ptrace_scope

                // mpirun Program
                //"${fileDirname}\\**.h",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.out"
            ],
            "options": {
                "cwd": "/usr/bin"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },

    ]
}